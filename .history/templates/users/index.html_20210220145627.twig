{% extends 'base.html.twig' %}

{% block body %}

<div class="d-flex justify-content-between align-content-center">
    <h1 class="text-muted">Users list</h1>
    <button class="btn btn-outline-secondary">Add new</button>
</div>

<hr>

<table class="table">
<thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">login</th>
      <th scope="col">email</th>
      <th scope="col">created at</th>
    </tr>
  </thead>
  <tbody>
  {% each  %}
    <tr>
      <th scope="row">1</th>
      <td>Mark</td>
      <td>Otto</td>
      <td>@mdo</td>
    </tr>
  </tbody>
</table>

{% if users|length > 0 %}
  
    
    <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr>

{% else %}
<h1>No users found</h1>
{% endif %}


{% endblock %}