{% extends 'base.html.twig' %}

{% block body %}

<h1>Edit user with id = {{id}}</h1>

{% if form_error %}
<div class="alert alert-danger">{{form_error}}</div>
{% else %}
<div class="alert alert-danger">{{form_error}}</div>
{% endif %}

{{ form_start(form, {method: 'PUT'}) }}
    <div class="mb-3">
        {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.update, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
{{ form_end(form) }}


{% endblock %}