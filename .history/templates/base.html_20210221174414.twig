<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Users Crud - Overblitz
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous" defer></script>
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Navbar</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Topics</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Gallery</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="{{path('user-index')}}">Users</a>
							</li>
						{% endif %}
					</ul>
					{% if not app.user %}
						<a href="{{ path('app_login')}} " class="nav-link text-white" aria-current="page">Login</a>
						<a href="{{ path('app_register')}} " class="nav-link text-white" aria-current="page">Register</a>
					{% else %}
						<span class="nav-text text-white">
							<div class="dropdown">
								<div class="nav-item text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Logged as
									{{app.user.email}}
								</div>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									{% if is_granted('ROLE_ADMIN') %}
									<li>
										<a href="" class="dropdown-item">Admin panel</a>
									</li>
									{% endif %}
									<li>
										<a class="dropdown-item" href="#">Profile</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Mails</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a href="{{ path('app_logout') }}" class="dropdown-item" aria-current="page">Logout</a>
									</li>
								</ul>
							</div>
						</span>
					{% endif %}
				</div>
			</div>
		</nav>

		<div class="container my-5"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
